<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity"
    android:orientation="vertical"
    android:background="#000"
    >

    <FrameLayout
        android:id="@+id/frameLayout"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:onClick="navigationBottom"
            android:id="@+id/homeButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/home_instagram"/>

        <ImageView
            android:onClick="navigationBottom"

            android:id="@+id/searchButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/search_instagram"/>
        <ImageView
            android:onClick="navigationBottom"

            android:id="@+id/addStoriesButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/add_instagram"/>
        <ImageView
            android:onClick="navigationBottom"

            android:id="@+id/loveButton"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/love_instagram"/>


        <LinearLayout
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/background_circular"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:cardCornerRadius="70dp"
                    >

                    <ImageView
                        android:id="@+id/profileButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/aries_spring"
                        android:scaleType="centerCrop"
                        />


                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </LinearLayout>







    </LinearLayout>



</LinearLayout>