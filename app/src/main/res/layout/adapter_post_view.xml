<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#000"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            app:cardCornerRadius="70dp"
            >


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:scaleType="centerCrop"

                tools:srcCompat="@tools:sample/avatars" />


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >


            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aries_spring"
                android:textSize="13dp"
                android:textStyle="bold"
                android:fontFamily="@font/spf_pro_font"
                android:textColor="#fff"
                 />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tokyo, Astra"
                android:textSize="11dp"
                android:textColor="#fff"
                android:fontFamily="@font/spf_pro_font"
                 />


        </LinearLayout>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/official_tick"
            />


    </LinearLayout>

    <ImageView
        android:id="@+id/postImage"
        android:layout_width="wrap_content"
        android:layout_height="375dp"
        android:scaleType="centerCrop"

        app:srcCompat="@drawable/aries_spring"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:layout_marginStart="14dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="21dp"
            android:background="@drawable/like_instagram"
            />
        <ImageView
            android:layout_width="22dp"
            android:layout_height="23dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/comments_instagram"
            />
        <ImageView
            android:layout_width="23dp"
            android:layout_height="20dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/messenger_instagram"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="end"
            >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="24dp"
                android:layout_gravity="end"
                android:background="@drawable/save_instagram"
                />


        </LinearLayout>



    </LinearLayout>


    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Today i was giving interview and i was very nervous. It was my first such experience. Have a nice day !"
        android:textColor="#fff"
        android:textSize="13sp"
        android:letterSpacing="0.01"
        android:fontFamily="@font/spf_pro_font"
        />
</LinearLayout>